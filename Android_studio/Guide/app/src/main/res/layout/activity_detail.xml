<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.aston.guide.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/photo_restaurant"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mac DO"
            android:layout_marginTop="10dp"
            android:text="20sp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textViewDetailCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Fast Food"
            android:layout_marginTop="10dp"
            android:text="20sp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/buttonDetailEmail"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_email"
            tools:text="info@macdo.fr"
            android:layout_gravity="center_horizontal">
        </Button>

        <Button
            android:id="@+id/buttonDetailTel"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_tel"
            tools:text="0623423255"
            android:layout_gravity="center_horizontal">
        </Button>

        <Button
            android:id="@+id/buttonDetailSite"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_site"
            tools:text="http://www.macdo.fr"
            android:layout_gravity="center_horizontal">
        </Button>

    </LinearLayout>

</LinearLayout>
